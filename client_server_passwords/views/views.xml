<odoo>
  <data>
    <record model="ir.ui.view" id="base_view_partner_form_servers_page">
            <field name="name">base.view.partner.form.servers.page</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
              <xpath expr="//form/sheet/notebook" positon="inside">
                <page string="Servers">
                  <field name="server_ids">
                    <tree editable="bottom">
                      <field name="name"/>
                      <field name="url" widget="url" placeholder="http://www.sharp4it.com"/>
                      <field name="ip" widget="ip" placeholder="0.0.0.0"/>
                      <field name="user_name"/>
                      <field name="password"/>
                    </tree>
                  </field>
                </page>
              </xpath>
            </field>
    </record>
  </data>
</odoo>